meta {
  name: Create checklist step
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/api/checklists/{{checklistId}}/steps
  body: json
  auth: inherit
}

body:json {
  {
    "description": "Prüfen, ob Türen abgeschlossen sind",
